{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(ls*)",
      "Bash(cat*)",
      "Bash(pwd*)",
      "Bash(find*)",
      "Bash(grep*)",
      "Bash(rg*)",
      "Bash(diff*)",
      "Bash(curl*)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git show*)",
      "Bash(git branch*)",
      "Bash(gh issue*)",
      "Bash(gh pr*)",
      "Bash(gh repo view*)",
      "Bash(gh status*)",
      "Bash(gh run*)",
      "Bash(gh search*)",
      "Bash(gh browse*)",
      "Bash(gh release*)",
      "Bash(gh gist*)",
      "Bash(gh variable list*)",
      "Bash(gh extension list*)",
      "Bash(basedpyright*)",
      "Bash(uv run basedpyright*)",
      "Bash(echo*)",
      "Bash(date*)",
      "Bash(tree*)",
      "Bash(tldr*)",
      "Bash(man*)",
      "Bash(which*)",
      "Bash(whoami*)",
      "Bash(head*)",
      "Bash(tail*)",
      "Bash(wc*)",
      "Bash(du*)",
      "Bash(df*)",
      "Bash(ps*)",
      "Bash(uptime*)",
      "Bash(pytest*)",
      "Bash(python -m py_compile*)",
      "Bash(python3 -m py_compile*)",
      "Bash(npm list*)",
      "Bash(npm ls*)",
      "Bash(npm view*)",
      "Bash(npm info*)",
      "Bash(npm outdated*)",
      "Bash(npm search*)",
      "Bash(npm help*)",
      "Bash(npm doctor*)",
      "Bash(npm audit*)",
      "Bash(npm config list*)",
      "Bash(npm config get*)",
      "Read",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch"
    ],
    "deny": ["Read(./.env)", "Read(./.env.*)", "Read(./secrets/**)"],
    "defaultMode": "default"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/vladko/.claude/ruffbasedpyright.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash /Users/vladko/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "promptSuggestionEnabled": false
}
